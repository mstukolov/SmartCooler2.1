                    fillOpacity: 0.8,
                    hideHover: 'auto',
                    behaveLikeLine: true,
                    resize: true,
                    pointFillColors:['#ffffff'],
                    pointStrokeColors: ['black'],
                    lineColors:['gray','red']
                };
                config.element = 'bar-current-value';
                config.stacked = true;
                var barChart = Morris.Bar(config);
